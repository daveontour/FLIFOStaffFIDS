@using FLIFOStaffFIDSCommon
@using Radzen.Blazor;
@using Radzen;
@using System.Linq;
@using System.Timers;
@inject IClientStateController stateController;

@code {
    [Parameter]
    public bool ApplyRules { get; set; } = false;
    [Parameter]
    public View? View { get; set; }
    [Parameter]
    public bool MultiTerminal { get; set; } = false;
    [Parameter]
    public int RowsPerPage { get; set; } = 20;

    public RadzenDataGrid<Flight> dataGrid;
    protected System.Timers.Timer pageTimer;

    public int showPage = 0;
    public int count { get; set; }
    public IEnumerable<Flight> flights { get; set; } = new List<Flight>();

    protected override void OnInitialized()
    {
        stateController.OnFlightsUpdated += UpdateGrid;
        stateController.OnPageChange += PageChange;
        stateController.OnTerminalUpdated += UpdateTerminal;
        SetPagerTask();
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadData();
            stateController.LastUpdated = DateTime.Now;
            stateController.NotifyNoUpdateFlights(); //Just a kludge to update the LastUpdated Component
        }
        stateController.OnPagerLengthChange += SetPagerTask;
    }
    public async void UpdateGrid()
    {
        await LoadData();
    }
    public async void UpdateTerminal()
    {
        await LoadData();
    }
    public void Dispose()
    {
        stateController.OnFlightsUpdated -= UpdateGrid;
        stateController.OnTerminalUpdated -= UpdateTerminal;
        stateController.OnPageChange -= PageChange;
        if (pageTimer != null)
        {
            pageTimer.Enabled = false;
        }
    }
    public async void PageChange()
    {
        await InvokeAsync(() =>
        {
            StateHasChanged();
        });
    }
    public async virtual Task LoadData()
    {

        flights = await stateController.GetAllFlights();
        count = flights.Count();

        await InvokeAsync(() =>
        {
            StateHasChanged();
        });

    }

    public void SetPagerTask()
    {
        if (stateController.PagerLength > 1)
        {
            if (pageTimer is not null)
            {
                pageTimer.Enabled = false;
            }
            pageTimer = new System.Timers.Timer
                {
                    Interval = 5 * 1000,
                    AutoReset = true,
                    Enabled = true
                };
            pageTimer.Elapsed += ChangePage;
        }
        else
        {
            if (pageTimer is not null)
            {
                pageTimer.Enabled = false;
            }
        }
    }
    public void ChangePage(object sender, ElapsedEventArgs e)
    {
        showPage = (showPage + 1) % stateController.PagerLength;
        dataGrid.GoToPage(showPage);
    }

}